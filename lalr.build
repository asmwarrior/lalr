
buildfile 'lalrc/lalrc.build';

for _, build in build:default_builds() do    
    local lalr = build:Library "lalr" {
        build:Cxx () {
            "ErrorPolicy.cpp",
        };

        build:Cxx () {
            "Grammar.cpp",
            "GrammarAction.cpp",
            'GrammarCompiler.cpp',
            "GrammarGenerator.cpp",
            "GrammarItem.cpp",
            "GrammarParser.cpp",
            "GrammarProduction.cpp",
            "GrammarState.cpp",
            "GrammarStateLess.cpp",
            "GrammarSymbol.cpp",
            "GrammarSymbolLess.cpp",
            "GrammarTransition.cpp"
        };

        build:Cxx () {
            "LexerState.cpp",
            "LexerTransition.cpp",
        };
        
        build:Cxx () {
            "RegexCompiler.cpp",
            "LexerGenerator.cpp",
            "LexerToken.cpp",

            "RegexAction.cpp",
            "RegexItem.cpp",
            "RegexState.cpp",
            "RegexTransition.cpp",
            "RegexCharacter.cpp",
            "RegexNode.cpp",
            "RegexNodeLess.cpp",
            "RegexParser.cpp",
            "RegexSyntaxTree.cpp"
        };
    };
end
