
build:all {
    build:Executable "${bin}/lua_test" {
        libraries = {
            "lua/liblua",
            "sweet/assert/assert",
            "sweet/error/error",
            "sweet/lua/lua",
            "sweet/rtti/rtti",
            "unit/libUnitTest"
        };

        build:Cxx () {
            "main.cpp",
            "TestLua.cpp",
            "TestLuaObject.cpp",
            "TestLuaPreprocessor.cpp",
            "TestLuaThread.cpp",
            "TestLuaWithStl.cpp",
            "TestLuaValue.cpp"
        };
    };
};
