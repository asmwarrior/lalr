
local settings = build.current_settings();
for _, architecture in ipairs(settings.architectures) do
    build.Library ("lua_unit", architecture) {
        libraries = {
            "sweet/lua/lua",
            "lua/liblua",
            "sweet/assert/assert",
            "sweet/error/error",
            "unit/libUnitTest"
        };

        build.Cxx (architecture) {
            "LuaUnitTest.cpp"
        };
    };
end
