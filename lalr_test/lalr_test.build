
local settings = build:current_settings();
if settings.unit_tests_enabled then 
    build:all {
        build:Executable "lalr_test" {
            libraries = {
                'src/lalr/lalr',
                'src/unittest-cpp/UnitTest++/UnitTest++'
            };

            build:Cxx () {
                "main.cpp",
                "TestParsers.cpp",
                "TestPrecedenceDirectives.cpp",
                "TestRegularExpressions.cpp"
            };
        };
    };
end
